{
  "name": "ALERTMANAGER",
  "label": "AlertManager",
  "description": "告警通知管理系统",
  "version": "0.23.0",
  "sortNum": 15,
  "dependencies": [],
  "packageName": "alertmanager-0.23.0.tar.gz",
  "decompressPackageName": "alertmanager-0.23.0",
  "roles": [
    {
      "name": "AlertManager",
      "label": "AlertManager",
      "roleType": "master",
      "runAs": {
        "user": "root",
        "group": "root"
      },
      "cardinality": 1,
      "logFile": "logs/alertmanager-${host}.out",
      "jmxPort": 9093,
      "startRunner": {
        "timeout": "60",
        "program": "control.sh",
        "args": [
          "start",
          "alertmanager"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control.sh",
        "args": [
          "stop",
          "alertmanager"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control.sh",
        "args": [
          "status",
          "alertmanager"
        ]
      },
      "restartRunner": {
        "timeout": "60",
        "program": "control.sh",
        "args": [
          "restart",
          "alertmanager"
        ]
      },
      "externalLink": {
        "name": "AlertManager Ui",
        "label": "AlertManager Ui",
        "url": "http://${host}:9093"
      }
    }
  ],
  "configWriter": {
    "generators": [
      {
        "filename": "alertmanager.yml",
        "configFormat": "custom",
        "outputDirectory": "",
        "templateName": "alertmanager.yml",
        "includeParams": [
          "apiUrl"
        ]
      }
    ]
  },
  "parameters": [
    {
      "name": "apiUrl",
      "label": "DDH管理端地址",
      "description": "DDH管理端地址",
      "configType": "map",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${apiHost}:${apiPort}"
    }
  ]
}