# Build the manager binary
FROM --platform=$BUILDPLATFORM golang:1.19.2 as builder

WORKDIR /shifu

ENV GO111MODULE=on
ENV GOPRIVATE=github.com/Edgenesis

COPY pkg/deviceshifu/mockdevice deviceshifu/pkg/mockdevice

WORKDIR /shifu/deviceshifu/pkg/mockdevice/mockdevice

COPY go.mod go.mod
COPY go.sum go.sum
COPY pkg/deviceshifu pkg/deviceshifu
COPY pkg/logger pkg/logger
RUN go mod download

# Build the Go app
ARG TARGETOS
ARG TARGETARCH

RUN CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH go build -a \
    -o /output/mockdevice-agv \
    /shifu/deviceshifu/pkg/mockdevice/mockdevice-agv/mockdevice-agv.go

FROM gcr.io/distroless/static-debian11
WORKDIR /
COPY --from=builder /output/mockdevice-agv mockdevice-agv

# Command to run the executable
USER 65532:65532
ENTRYPOINT ["/mockdevice-agv"]
