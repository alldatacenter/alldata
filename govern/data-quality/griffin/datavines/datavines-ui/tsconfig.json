{
    "compilerOptions": {
        "baseUrl": ".",
        // "baseUrl": "./node_modules",
        "rootDir": "./",
        "paths": {
            "@Editor/*": ["./Editor/*"],
            "@/*": ["./src/*"],
            "src/*": ["./src/*"],
            "common/*": ["./src/common/*"],
            "hooks/*": ["./src/hooks/*"],
            "utils/*": ["./src/utils/*"],
            "view/*": ["./src/view/*"],
            "store/*": ["./src/store/*"],
            "component/*": ["./src/component/*"],
            "assets/*": ["./src/assets/*"],
        },
        "outDir": "./dist",
        "module": "esnext",
        "target": "esnext",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["./src/**/*","./Editor/**/*", "./typings/**/*"],
    "exclude": ["node_modules", "dist", "build"]
}