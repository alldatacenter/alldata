<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.mall.mapper.admin.PmsProductCategoryDao">
    <resultMap id="listWithChildrenMap" type="com.platform.mall.dto.admin.PmsProductCategoryWithChildrenItem"
               extends="com.platform.mall.mapper.admin.PmsProductCategoryMapper.BaseResultMap">
        <collection property="children" resultMap="com.platform.mall.mapper.admin.PmsProductCategoryMapper.BaseResultMap"
                    columnPrefix="child_"></collection>
    </resultMap>
    <select id="listWithChildren" resultMap="listWithChildrenMap">
        select
        c1.id,
        c1.name,
        c2.id child_id,
        c2.name child_name
        from pms_product_category c1 left join pms_product_category c2 on c1.id = c2.parent_id
        where c1.parent_id = 0
    </select>
</mapper>
