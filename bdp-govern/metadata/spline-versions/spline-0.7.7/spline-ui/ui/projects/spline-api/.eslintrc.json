{
    "extends": "../../.eslintrc.js",
    "parserOptions": {
        "project": [
            "projects/spline-api/tsconfig.lib.json",
            "projects/spline-api/tsconfig.spec.json"
        ]
    },
    "rules": {
        "@angular-eslint/directive-selector": [
            "error",
            {
                "type": "attribute",
                "prefix": "splineApi",
                "style": "camelCase"
            }
        ],
        "@angular-eslint/component-selector": [
            "error",
            {
                "type": "element",
                "prefix": "spline-api",
                "style": "kebab-case"
            }
        ]
    }
}
