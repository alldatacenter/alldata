{
    "rulesDirectory": [
        "codelyzer"
    ],
    "extends": [
        "tslint-angular"
    ],
    "rules": {
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "max-classes-per-file": false,
        "no-namespace": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-last",
                "grouped-imports": true
            }
        ],
        "no-duplicate-imports": true,
        "no-unbound-method": [
            true,
            "ignore-static"
        ],
        "semicolon": false,
        "whitespace": [
            true,
            "check-module"
        ],
        "interface-over-type-literal": false
    }
}
