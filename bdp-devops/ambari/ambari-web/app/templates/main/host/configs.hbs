{{#if view.isConfigAvailable}}
    <div class="row host-configs">
        <div class="col-md-2">
          <div class="well side-menu-well">
            {{view App.MainHostServiceMenuView}}
          </div>
        </div>
        <div class="col-md-10">
          {{outlet service_config_outlet}}
        </div>
    </div>
{{else}}
    <div class="side-menu-well">
        <i class="message alert alert-info">{{t hosts.host.serviceNotAvailable}}</i>
    </div>
{{/if}}